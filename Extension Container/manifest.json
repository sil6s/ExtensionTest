{
  "name": "ITSC Project Management",
  "description": "Base Level Extension",
  "version": "1.3",
  "manifest_version": 3,
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "css": ["styles.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "hello.html",
    "default_title": "ITSC Project Management",
    "default_icon": {
      "16": "icons/ITSC16.jpg",
      "48": "icons/ITSC48.jpg",
      "128": "icons/ITSC128.jpg"
    }
  },
  "background": {
    "service_worker": "service_worker.js",
    "persistent": true
  } 
}
